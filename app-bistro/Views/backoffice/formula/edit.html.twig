{% extends 'backoffice/layout.html.twig' %}
{% block title %}Mise à jour d'une formule{% endblock %}
{% block content_back %}
<div class="container">
	<h1>>> Editer une formule</h1>
	<form method="post" action="{{ url('/backoffice/formules/update/') ~ infoFormula.id }}" enctype="multipart/form-data">
		<div class="form-group row col-form-label">
	    	<label for="name">Nom:</label>
	    	<input type="text" class="form-control" id="name" name="name" value="{{ infoFormula.name }}">
	  	</div>
	  	<div class="form-group row col-form-label">
	    	<label for="description">Description:</label>
	    	<textarea id="description" name="description" class="form-control">{{ infoFormula.description }}</textarea>
	  	</div>
	  	<div class="form-group">
	    	<label for="enabled">Activé:</label>
	    	{% if infoFormula.enabled == 1 %}
	    		<input type="checkbox" class="form-check-input" id="enabled" name="enabled" style="margin-left:1%;" checked>
	    	{% else %}
	    		<input type="checkbox" class="form-check-input" id="enabled" name="enabled" style="margin-left:1%;">
	    	{% endif %}
	  	</div>
	  	<div class="form-group row col-form-label">
	    	<label for="price">Prix (en €):</label>
	    	<input type="number" class="form-control" id="price" name="price" value="{{ infoFormula.price }}">
	  	</div>
	  	<div class="form-group row col-form-label">
	    	<label for="discount">Promo (en %):</label>
	    	<input type="number" class="form-control" id="discount" name="discount" value="{{ infoFormula.discount }}">
	  	</div>
	  	<div class="form-group row">
	  		<label for="customFile">Illustration:</label>
	    	 <div class="custom-file">
	      		<input type="file" class="custom-file-input" id="customFile" name="illustration" lang="fr">
	      		<label class="custom-file-label" for="customFile">Image d'illustration</label>
	    	</div>
	  	</div>
	  	<div class="form-group row col-form-label">
	  		<button type="submit" class="btn btn-outline-success"><i class="fas fa-check"></i> Modifier cette formule</button>
	  		<a href="{{ url('/backoffice/formules') }}" class="btn btn-outline-danger" style="margin-left:5%;"><i class="fas fa-times"></i> Annuler</a>
		</div>
	</form>
</div>
{% endblock %}