{% extends 'backoffice/layout.html.twig' %}
{% block title %}Liste des formules{% endblock %}
{% block content_back %}
<div class="container">
	<h1 style="text-shadow: white 1px 0 10px;">Liste des formules</h1>
	<a href="{{ url('/backoffice/formules/ajouter') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une nouvelle formule</a>
	<table class="table" style="margin-top:5%;background-color:white;">
		<thead>
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Nom</th>
		      <th scope="col">Prix</th>
		      <th scope="col">Active</th>
		      <th scope="col">Promo</th>
		      <th scope="col">Image</th>
		      <th scope="col"></th>
		    </tr>
	  	</thead>
	  	<tbody>
			{% for formula in formulas %}
				<tr>
					<th scope="row">{{ formula.id }}</th>
					<td>{{ formula.name }}</td>
					<td>{{ formula.price }}â‚¬</td>
					<td>{{ formula.enabled }}</td>
					<td>{{ formula.discount }}</td>
					{% if formula.illustration != "" %}
						<td><img src="{{ asset('/img/illustrations/') ~ formula.illustration }}" style="width:30%; height:auto;"></td>
					{% else %}
						<td></td>
					{% endif %}
					<td style="width:30%;">
						<a href="{{ url('/backoffice/formules/editer/') ~ formula.id }}" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editer</a>
						<a href="{{ url('/backoffice/formules/effacer/') ~ formula.id }}" class="btn btn-outline-danger"><i class="far fa-trash-alt"></i> Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}